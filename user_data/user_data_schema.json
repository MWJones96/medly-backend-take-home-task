    "userMark": {
      "type": "integer"
    },
    "annotatedAnswer": {
      "type": "string"
    },
    "userAnswer": {
      "type": "string"
    },
    "markingTable": {
      "type": "string"
    },
    "options": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "updatedAt": {
      "type": "string"
    }
