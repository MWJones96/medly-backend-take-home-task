      "properties": {
        "maths": {
          "type": "array"
        },
        "paths": {
          "type": "array"
        },
        "textboxes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "isMath": {
                "type": "boolean"
              },
              "color": {
                "type": "string"
              },
